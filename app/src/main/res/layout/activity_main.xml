<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phoebus_ravi.www.chiku.MainActivity"
    android:orientation="vertical"
    android:background="#96fff75d"
    android:weightSum="80"
    android:clickable="true"
    android:onClick="onClickedButterfly">

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/butterfly_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="68"
        android:layout_gravity="center"
        android:src="@drawable/flower_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_margin="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Welcome Shreya !"
        android:textSize="35sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Touch me . . ."
        android:fontFamily="casual"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"
        android:gravity="center"/>

</LinearLayout>
